[user]
name = {{ settings.user.name }}
email = {{ settings.user.email }}

[core]
editor = vim

[alias]

s = "!git status --long -u no;\
git -c color.status=always status --short --renames -uall | sort -rk1,1"

l = log --graph --date=short --pretty=format:'\
%C(yellow)%h%C(reset) %ad %C(green)%s%C(reset) %C(yellow)%d%C(reset) [%an]'

reset = reset --no-quiet
add = add --verbose
add-deleted = "!git ls-files --deleted | xargs git add --verbose"
add-modified = "!git ls-files --modified | xargs git add --verbose"
add-new = "!git ls-files --others --exclude-standard | xargs git add --verbose"

[advice]
defaultBranchName = false
